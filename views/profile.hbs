<section id="viewhotelDetails">
    <div class="profile"><img src="../static/img/profile.png" alt="default user">
        <h3>User Info:</h3>
        <div class="flex">
            <p>Username: </p>
            <p>{{data.username}}</p>
        </div>
        <div class="flex">
            <p>Email: </p>
            <p>{{data.email}}</p>
        </div>
        <div class="flex">

            <p>Reservations: </p>
            {{#if result}}
            <p>
                <span>{{result}}</span>
            </p>
            {{else}}
            <p>
                <span>No reservation</span>
            </p>
            {{/if}}


        </div>
    </div>
</section>